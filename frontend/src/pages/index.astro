---
import Layout from "../layouts/Layout.astro"
import ConnectionAnimation from "../components/ConnectionAnimation.astro"
---

<Layout>
	<!-- Call to Action Section -->
	<section
		class="sticky-section cta-section h-screen flex items-center overflow-hidden"
	>
		<div class="max-w-7xl mx-auto px-4 md:px-6 py-16 w-full">
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<!-- Animation - Desktop: Left, Mobile: Bottom -->
				<div
					class="w-full h-[300px] md:h-[500px] order-1 md:order-1 overflow-hidden"
				>
					<ConnectionAnimation />
				</div>

				<!-- CTA Content - Desktop: Right, Mobile: Top -->
				<div
					class="text-center md:text-left rounded-xl p-8 md:p-20 bg-primary order-2 md:order-2"
				>
					<h2
						class="text-5xl md:text-6xl font-bold text-black mb-6 leading-tight"
					>
						Conoce tu orientación política
					</h2>
					<p class="text-xl md:text-2xl text-gray-700 mb-8">
						Descubre qué partidos políticos están más alineados con
						tus opiniones
					</p>
					<a
						href="/elecciones-generales-2026"
						class="inline-block bg-black text-white font-bold text-lg px-12 py-5 rounded-xl hover:bg-black-hover transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
					>
						Empezar Votomatic
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Cards Section with Hover Effect -->
	<section
		class="sticky-section cards-section bg-white h-screen flex items-center"
	>
		<div class="max-w-7xl mx-auto px-6 py-32 w-full">
			<h2
				class="text-5xl md:text-6xl font-bold text-black mb-16 text-center"
			>
				Explora más
			</h2>
			<div class="grid md:grid-cols-3 gap-8">
				<!-- Card 1 -->
				<a
					href="/como-funciona"
					class="card-hover block bg-surface rounded-2xl p-8 hover:bg-background transition-all duration-500"
				>
					<h3 class="text-2xl font-bold text-black mb-4">
						Cómo funciona
					</h3>
					<p class="text-lg text-gray-600">
						Descubre la metodología detrás del Votomatic
					</p>
				</a>

				<!-- Card 2 -->
				<a
					href="/preguntas-frecuentes"
					class="card-hover block bg-surface rounded-2xl p-8 hover:bg-background transition-all duration-500"
				>
					<h3 class="text-2xl font-bold text-black mb-4">
						Preguntas frecuentes
					</h3>
					<p class="text-lg text-gray-600">
						Respuestas a las dudas más comunes
					</p>
				</a>

				<!-- Card 3 -->
				<a
					href="/documentacion"
					class="card-hover block bg-surface rounded-2xl p-8 hover:bg-background transition-all duration-500"
				>
					<h3 class="text-2xl font-bold text-black mb-4">
						Documentación
					</h3>
					<p class="text-lg text-gray-600">
					    Explora nuestro documentación detallada
					</p>
				</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.section-wrapper {
		position: relative;
	}

	.sticky-section {
		position: sticky;
		top: 0;
		width: 100%;
	}

	.sticky-section:nth-of-type(1) {
		z-index: 1;
	}

	.cards-section {
		z-index: 2;
	}
</style>
